# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
# IMPORTANT: You need the SERVICE ROLE KEY (not the publishable key) for the backend
# Get it from: Supabase Dashboard > Project Settings > API > service_role key (secret)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=4000
ADMIN_KEY=secret-admin-key

# JWT Secret for authentication tokens (change this in production!)
JWT_SECRET=your-jwt-secret-key-change-in-production

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
NOTIFICATION_EMAIL=your-email@gmail.com

